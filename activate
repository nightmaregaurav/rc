# Determine the directory of this sourced file
if [ -n "${BASH_SOURCE[0]}" ]; then
    current_rc_script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
elif [ -n "${ZSH_VERSION}" ]; then
    current_rc_script_dir="$(cd "$(dirname "${(%):-%x}")" && pwd)"
elif [ -n "${.sh.file}" ]; then
    current_rc_script_dir="$(cd "$(dirname "${.sh.file}")" && pwd)"
else
    current_rc_script_dir="$(pwd)"
fi

# Source environment variables first, then aliases, and finally functions
source $current_rc_script_dir/rc.d/envs
source $current_rc_script_dir/rc.d/aliases
source $current_rc_script_dir/rc.d/functions

# Save public IP Address to a file
rm -f ~/.extip
touch ~/.extip
(set-public-ip-to-extip-file &) > /dev/null 2>&1

# Hide EOL sign ('%')
PROMPT_EOL_MARK=""

# Configure `time` format
TIMEFMT=$'\nreal\t%E\nuser\t%U\nsys\t%S\ncpu\t%P'

# Expand the history size
export HISTFILESIZE=10000
export SAVEHIST=10000
export HISTSIZE=2000

# Set history file
export HISTFILE=~/.history

# Set history append mode
if [[ -n $ZSH_VERSION ]]; then
  setopt INC_APPEND_HISTORY
else
  shopt -s histappend
  PROMPT_COMMAND="history -a;$PROMPT_COMMAND"
fi

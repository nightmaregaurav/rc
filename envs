for file in "$current_rc_script_dir/envs.d/"*; do
    if [[ $file == *.zsh ]]; then
        [[ -f "$file" && -n $ZSH_VERSION ]] && source "$file"
    elif [[ $file == *.bash ]]; then
        [[ -f "$file" && -n $BASH_VERSION ]] && source "$file"
    else
        [[ -f "$file" ]] && source "$file"
    fi
done

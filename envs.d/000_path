# path setup
PATH_LIST=(
    /bin
    /usr/bin
    /usr/bin/site_perl
    /usr/bin/vendor_perl
    /usr/bin/core_perl
    /usr/local/bin
    /usr/local/sbin
    /opt/mssql-tools/bin
    /opt/homebrew/bin
    "$HOME/bin"
    "$HOME/local/bin"
    "$HOME/.local/bin"
    "$HOME/.local/share/bin"
    "$HOME/.local/share/JetBrains/Toolbox/scripts"
    "$HOME/.dotnet"
    "$HOME/.dotnet/tools"
    "$HOME/.config/composer/vendor/bin"
    "$HOME/.flutter/bin"
)
export PATH=$PATH:$(IFS=:; echo "${PATH_LIST[*]}")

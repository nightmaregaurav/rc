# this file is named 000_path to make sure it is sourced first
# path setup
# if PREFIX is set, then start start the root paths with that instead of /
if [ -n "$PREFIX" ]; then
    ROOT="${PREFIX%/}"
else
    ROOT=""
fi
PATH_LIST=(
    "$HOME/.flutter/bin"
    "$HOME/.config/composer/vendor/bin"
    "$HOME/.dotnet/tools"
    "$HOME/.dotnet"
    "$HOME/.local/share/JetBrains/Toolbox/scripts"
    "$HOME/.local/share/bin"
    "$HOME/.local/bin"
    "$HOME/local/bin"
    "$HOME/bin"
    "$PREFIX/opt/mssql-tools/bin"
    "$PREFIX/opt/homebrew/bin"
    "$PREFIX/opt/homebrew/sbin"
    "$PREFIX/usr/local/bin"
    "$PREFIX/usr/local/sbin"
    "$PREFIX/usr/bin/core_perl"
    "$PREFIX/usr/bin/vendor_perl"
    "$PREFIX/usr/bin/site_perl"
    "$PREFIX/usr/bin"
    "$PREFIX/usr/sbin"
    "$PREFIX/bin"
    "$PREFIX/sbin"
)
export PATH=$(IFS=:; echo "${PATH_LIST[*]}"):$PATH

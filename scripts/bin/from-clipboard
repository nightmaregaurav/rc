#!/usr/bin/env bash

# from-clipboard: Paste text from clipboard

if [[ "$1" == "--help" || "$1" == "-h" ]]; then
    echo "Usage: from-clipboard"
    echo
    echo "Pastes the content of the clipboard."
    echo
    echo "Examples:"
    echo "  from-clipboard"
    exit 0
fi

if [[ $OSTYPE == "darwin"* ]]; then
    pbpaste
elif [[ $OSTYPE == "linux-gnu"* ]]; then
    if ! command -v xclip &>/dev/null; then
        echo "Error: 'xclip' is not installed."
        exit 1
    fi
    xclip -selection clipboard -o
else
    echo "Error: Clipboard functionality not supported on this platform."
    exit 1
fi

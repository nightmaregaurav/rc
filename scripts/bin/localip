#!/usr/bin/env -S uv run --script

# /// script
# requires-python = ">=3.14"
# dependencies = [
#   "argcomplete",
# ]
# ///

import os
import sys
import socket
import argparse
import argcomplete




def get_primary_ip() -> str | None:
    """Return the primary non-loopback IPv4 address in a cross-platform way."""
    try:
        with socket.socket(socket.AF_INET, socket.SOCK_DGRAM) as s:
            s.connect(("8.8.8.8", 80))  # No data is sent, just opens a route
            ip = s.getsockname()[0]
        if not ip.startswith(("127.", "169.")):
            return ip
    except Exception:
        pass
    return None


def main():
    parser = argparse.ArgumentParser(
        description="Fetch the primary local IP address.",
        formatter_class=argparse.RawTextHelpFormatter,
        add_help=False,
    )

    parser.add_argument(
        "-h", "--help",
        action="help",
        help="Show help message and exit.",
    )

    argcomplete.autocomplete(parser, always_complete_options=False)
    parser.parse_args()

    ip = get_primary_ip()
    if ip:
        print(ip)
    else:
        sys.exit(1)


if __name__ == "__main__":
    main()

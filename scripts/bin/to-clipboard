#!/usr/bin/env bash

# to-clipboard: Copy text to clipboard

if [[ "$1" == "--help" || "$1" == "-h" ]]; then
    echo "Usage: to-clipboard <text>"
    echo
    echo "Copies the provided text to the clipboard."
    echo
    echo "Examples:"
    echo "  to-clipboard 'Hello, World!'"
    exit 0
fi

if [ -z "$1" ]; then
    echo "Missing argument: <text>"
    echo "Try 'to-clipboard --help' for more information."
    exit 1
fi

if [[ $OSTYPE == "darwin"* ]]; then
    echo "$1" | pbcopy
elif [[ $OSTYPE == "linux-gnu"* ]]; then
    if ! command -v xclip &>/dev/null; then
        echo "Error: 'xclip' is not installed."
        exit 1
    fi
    echo "$1" | xclip -selection clipboard
else
    echo "Error: Clipboard functionality not supported on this platform."
    exit 1
fi
